{
  "name": "kondate-loop-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:all": "npm run dev:api & npm run dev",
    "build": "npm run build --workspace=packages/types && npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "build:types": "npm run build --workspace=packages/types"
  }
}
